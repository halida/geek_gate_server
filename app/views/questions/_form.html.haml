= form_for @question do |f|
  -if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :options
    = f.text_area :options
  .field
    = f.label :answer
    = f.text_field :answer
  .field
    = f.label :author_id
    = f.number_field :author_id
  .actions
    = f.submit 'Save'
